.tweet {
  font-family: Georgia, serif;
  font-size: 120%; }
  .tweet .tweet_list {
    list-style-type: none;
    margin: 0;
    padding: 0;
    background: #8ADEE2; }
    .tweet .tweet_list li {
      overflow: auto;
      padding: .5em; }
      .tweet .tweet_list li a {
        color: #0C717A; }
    .tweet .tweet_list .tweet_even {
      background: #91E5E7; }
    .tweet .tweet_list .tweet_avatar {
      padding-right: .5em;
      float: left; }
      .tweet .tweet_list .tweet_avatar img {
        vertical-align: middle; }
